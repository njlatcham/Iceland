@import '_partials/_normalize'

html {
	background-color: #131419
	color: white
	font-size: 10px
}

.head {
	background-image: url("../res/img/tom-coe-426084-unsplash.jpg")
	background-position: left bottom
	background-size: cover
	height: 100vh

	.nav {
		display: flex
		flex-direction: row
		justify-content: space-between
		position: fixed
		width: 100%
		
		.logo {
			display: inline-block
			font-family: 'fairplay display', serif
			margin: 20px
			
			p {
				color: #929AA2
				font-size: 2.4rem
				margin: 0
			}
		}
		
		.navigation {
			width: 35%
			
			ul {
				list-style-type: none
				margin: 20px
				padding: 0
				
				li {
					color: #929AA2
					display: inline-block
					float: right
					font-family: 'lato', sans-serif
					font-size: 1.6rem
					letter-spacing: 3px
					margin-right: 3rem
					text-transform: uppercase
					
					&:first-child {
						margin-right: 0
					}
					
					a {
						border: 2px solid transparent

						&:hover {
							border-bottom: 2px solid #929AA2
						}
					}
				}
			}
		}
	}
}

.title {
	display: inline-block
	margin-left: 20%
	margin-top: 20%
	
	.iceland {
		color: black
		display: inline-block
		font-family: 'fairplay display', serif
		font-size: 12rem
		margin: 0
	}
	
	.subheader {
		display: flex
		flex-direction: row
		
		.line {
			height: 1px
			background-color: #B2B9C3
			margin: auto 0
			width: 12%
		}
		
		.subtitle {
			color: #B2B9C3
			font-family: 'lato', sans-serif
			font-size: 1.4rem
			margin: 0
			padding-left: 10px
			text-transform: uppercase
			letter-spacing: 3px
		}
	}
}

.ice {
	//height: 100vh
	width: 50%
	margin: 0 auto
	
	.land {
		color: #B2B9C3
		font-family: 'lato', sans-serif
		font-size: 2.6rem
		letter-spacing: 3px
		margin: 0
		padding: 67px 20px 0 20px
		text-align: center
		text-transform: uppercase
	}
	
	.snow {
		font-family: 'playfair display', serif
		font-size: 5rem
		margin: 0
		padding: 15px
		text-align: center
		text-transform: capitalize
	}
	
	.alex {
		max-width: 100%
	}
	
	.martin {
		max-width: 100%
	}
	
	.plant {
		color: #B2B9C3
		font-size: 2rem
		line-height: 2
		text-align: center
	}
}

.fuck {
	// height: 100vh
	display: flex
	justify-content: center

	.piss {
		width: 50%
		position: relative
		
		.piss-image {
			position: absolute
			top: 0
			left: 0
			display: block
			max-width: 100%
			width: 100%
			opacity: 0
			pointer-events: none
			transition: opacity 0.3s ease
			
			&.piss-image--active {
				opacity: 1
				pointer-events: initial
			}
		}
	}
	
	.shit {
		display: flex
		flex-direction: column
		justify-content: center
		width: 45%
		margin-left: 5rem
	
		.favourite {
			color: #B2B9C3
			font-family: 'lato'
			font-size: 2.6rem
			margin-top: 0
			text-transform: uppercase
		}
		
		.excursions {
			margin-right: 15%

			ol {
				margin: 0
				padding: 0
					
				.slide {
					color: #B2B9C3
					font-size: 3rem
					list-style-position: inside
					list-style-type: none
					margin: 0
					cursor: pointer
					
					&.slide--active {
						color: white
					}
					
					a {
						line-height: 1.5
						margin: 20px 0
					}
					
					.line2 {
						height: 1px
						background-color: #B2B9C3
						margin: 20px 0
					}
				}
			}
		}
	}
}

